<%= form_for(@product) do |f|%>
<div class="form-group">
    <%= f.label :title, "Name" %>
    <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="form-group">
    <%= f.label :price, "Price" %>
    <%= f.text_field :price, class: 'form-control' %>
</div>

<%= f.submit "Save", class: 'btn btn-success' %>

<% end %>